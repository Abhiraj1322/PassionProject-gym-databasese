@model GymDatabase.Models.Membershipdto

@{
    ViewData["Title"] = "Create Membership";
}

<h2>Create Membership</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="MemberName"></label>
        <input asp-for="MemberName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PlanType"></label>
        <input asp-for="PlanType" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
