@model IEnumerable<Membershipdto>

@{
    ViewData["Title"] = "Membership List";
}

<h2>Memberships</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Membership</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Member Name</th>
            <th>Plan Type</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MemberName</td>
                <td>@item.PlanType</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MembershipId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.MembershipId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.MembershipId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
