@model IEnumerable<GymDatabase.Models.TraineeDTO>

@{
    ViewData["Title"] = "Trainee List";
}

<!-- Custom Styles -->
<style>
    h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
    }

    .table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

        .table th,
        .table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #3498db;
            color: white;
        }

        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table tr:hover {
            background-color: #f1f1f1;
        }

        .table .btn {
            margin-right: 5px;
        }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        margin-bottom: 20px;
    }

        .btn-info:hover, .btn-warning:hover, .btn-danger:hover, .btn-success:hover {
            opacity: 0.8;
        }
</style>

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Specialty</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trainee in Model)
        {
            <tr>
                <td>@trainee.Name</td>
                <td>@trainee.Specialty</td>
                <td>
                    <a href="@Url.Action("Details", new { id = trainee.TrainerId })" class="btn btn-info">View</a>
                    <a href="@Url.Action("Edit", new { id = trainee.TrainerId })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = trainee.TrainerId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-success">Create New Trainee</a>
