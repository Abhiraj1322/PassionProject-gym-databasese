@model GymDatabase.Models.TraineeDTO

@{
    ViewData["Title"] = "Trainee Details";
}

<!-- Custom Styles -->
<style>
    h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
    }

    .details-container {
        margin-top: 30px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

        .details-container div {
            margin-bottom: 15px;
        }

        .details-container strong {
            font-size: 1.1em;
            color: #2c3e50;
        }

    .btn {
        padding: 10px 20px;
        font-size: 1.1em;
        border-radius: 5px;
        width: 100px;
    }

    .btn-warning {
        background-color: #f39c12;
        border-color: #f39c12;
        color: white;
    }

        .btn-warning:hover {
            background-color: #e67e22;
            border-color: #e67e22;
        }

    .btn-danger {
        background-color: #e74c3c;
        border-color: #e74c3c;
        color: white;
        margin-left: 10px;
    }

        .btn-danger:hover {
            background-color: #c0392b;
            border-color: #c0392b;
        }

    .btn-secondary {
        background-color: #95a5a6;
        border-color: #95a5a6;
        color: white;
        margin-top: 20px;
        margin-left: 10px;
    }

        .btn-secondary:hover {
            background-color: #7f8c8d;
            border-color: #7f8c8d;
        }
</style>

<!-- Page Content -->
<h1>@ViewData["Title"]</h1>

<div class="details-container">
    <div>
        <strong>Name:</strong> @Model.Name
    </div>
    <div>
        <strong>Specialty:</strong> @Model.Specialty
    </div>

    <div>
        <a href="@Url.Action("Edit", new { id = Model.TrainerId })" class="btn btn-warning">Edit</a>
        <a href="@Url.Action("Delete", new { id = Model.TrainerId })" class="btn btn-danger">Delete</a>
    </div>
    <a href="@Url.Action("Index")" class="btn btn-secondary mt-2">Back to List</a>
</div>
