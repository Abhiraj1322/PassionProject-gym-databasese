@model GymDatabase.Models.TraineeDTO

@{
    ViewData["Title"] = "Delete Trainee";
}

<!-- Custom Styles -->
<style>
    h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
    }

    p {
        font-size: 1.2em;
        text-align: center;
        margin-bottom: 20px;
    }

    strong {
        color: #e74c3c;
        font-size: 1.3em;
    }

    .form-group {
        text-align: center;
        margin-top: 20px;
    }

    .btn {
        padding: 12px 20px;
        font-size: 1.1em;
        border-radius: 5px;
    }

    .btn-danger {
        background-color: #e74c3c;
        border-color: #e74c3c;
        color: white;
        width: 200px;
    }

        .btn-danger:hover {
            background-color: #c0392b;
            border-color: #c0392b;
        }

    .btn-secondary {
        background-color: #95a5a6;
        border-color: #95a5a6;
        color: white;
        width: 200px;
        margin-left: 10px;
    }

        .btn-secondary:hover {
            background-color: #7f8c8d;
            border-color: #7f8c8d;
        }
</style>

<!-- Page Content -->
<h1>@ViewData["Title"]</h1>

<p>Are you sure you want to delete the trainee <strong>@Model.Name</strong>?</p>

<form method="post">
    <input type="hidden" asp-for="TrainerId" />
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </div>
</form>
